<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<name>response2</name>
	<version>2.0.0</version>
	<requirements>
		<minimum_version>3.0.0</minimum_version>
	</requirements>
	<thumbnail>thumbnail.png</thumbnail>
	<description>
		<![CDATA[
			Response is a responsive blog theme made for Fork CMS. It is column based and easy to adjust the user's needs. A clean and simple theme to get started with Fork CMS and responsive webdesign.
		]]>
	</description>
	<authors>
		<author>
			<name>Simon Coudeville</name>
			<url>https://twitter.com/#!/scoudeville</url>
		</author>
	</authors>
	<metanavigation supported="false" />
	<templates>
		<template label="Default" path="Core/Layout/Templates/Default.tpl">
			<positions>
				<position name="main">
					<defaults>
						<widget module="Blog" action="RecentArticlesFull" />
					</defaults>
				</position>
				<position name="right">
					<defaults>
						<widget module="Blog" action="RecentArticlesList" />
					</defaults>
				</position>
				<position name="bottomleft" />
				<position name="bottomright" />
			</positions>
			<format>
				[main,main,main,right],[bottomleft,bottomleft,bottomleft,bottomright]
			</format>
		</template>
	</templates>
</theme>